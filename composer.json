{
  "name": "architools/laravel-sieve",
  "description": "Laravel Sieve is a lightweight yet powerful filtering and sorting engine for Laravel applications. It transforms HTTP query parameters into clean, maintainable Eloquent or Query Builder queries with zero boilerplate. Built to follow SOLID and DRY principles, this modular package supports dynamic filtering, custom sorting, relationship constraints, and JSON field queries. Ideal for RESTful APIs, admin panels, and data-intensive applications, it keeps your controllers slim and your queries expressive â€” all while embracing Laravel best practices.",
  "keywords": [
    "laravel sieve",
    "laravel filters",
    "laravel",
    "laravel package",
    "filters",
    "sorting",
    "query builder",
    "eloquent",
    "eloquent filtering",
    "api",
    "restful",
    "database queries",
    "modular",
    "dynamic filters",
    "dynamic filters laravel",
    "custom sorting",
    "solidity",
    "dry",
    "json queries",
    "admin panel",
    "dashboard",
    "eloquent filters",
    "query optimization",
    "query parameters",
    "laravel filter query parameters",
    "sort and filter laravel package",
    "filter eloquent relations dynamically",
    "filterable Laravel models",
    "filterable eloquent models"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Muhammad Reda",
      "email": "muhammadreda97@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "illuminate/database": "^11.0 || ^12.0",
    "illuminate/http": "^11.0 || ^12.0",
    "illuminate/support": "^11.0 || ^12.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "ArchiTools\\LaravelSieve\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "ArchiTools\\LaravelSieve\\LaravelFiltersServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
